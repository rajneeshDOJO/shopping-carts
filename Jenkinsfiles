pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo 'This is the Build job'
        sh 'mvn compile'
      }
    }

    stage('Test') {
      steps {
        echo 'This is the Test job'
        sh 'mvn test'
      }
    }

    stage('Package') {
      steps {
        echo 'This is the Package job'
        sh 'mvn package'
      }
    }

    stage('Archive') {
      steps {
        archiveArtifacts '**/target/8.jar'
      }
    }

  }
  tools {
    maven 'maven'
  }
  post {
    always {
      echo 'This pipeline has completed...'
    }

  }
}